<% provide(:title, "Home") %>

<div class="center jumbotron">
  <h1>Witaj w systemie Sprawozdania PRz</h1>
  <% if logged_in? %>
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info'  %>
          </section>
          <section class="micropost_form">
            <%= render 'shared/messages_form' %>
          </section>
        </aside>
      </div>
  <% else %>

  <h2>Zaloguj się, aby skorzystać z serwisu</h2>

  <%= link_to "Zaloguj się", login_path, class: "btn btn-lg btn-primary" %>

  <h2>Jeżeli nie masz jeszcze konta, możesz założyć je <%= link_to "tutaj", signup_path %></h2>
   <% end %>
</div>

