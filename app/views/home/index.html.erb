<% provide(:title, "Home") %>

<div class="center jumbotron">
  <h1>Witaj w systemie Sprawozdania PRz</h1>
  <% if logged_in? %>
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info'  %>
          </section>
          <% if current_user.admin?%>
          <section class="micropost_form">
            <%= render 'shared/messages_form' %>
          </section>
          <% end %>
        </aside>
        <div class="col-md-8">
          <h3>Wiadomości</h3>
          <%= render 'shared/feed' %>
        </div>
      </div>

  <% else %>

  <h2>Zaloguj się, aby skorzystać z serwisu</h2>

  <%= link_to "Zaloguj się", login_path, class: "btn btn-lg btn-primary" %>

  <h2>Jeżeli nie masz jeszcze konta, możesz założyć je <%= link_to "tutaj", signup_path %></h2>
   <% end %>
</div>

