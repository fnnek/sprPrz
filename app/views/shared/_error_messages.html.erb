<% if object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        Formularz zawiera  <%= pluralize(object.errors.count, "błędy/ów") %>.      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>