<% provide(:title, "Użytkownicy" )%>
<h1>Użytkownicy</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
  <li><%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "(usuń użytkownika)", user, method: :delete, data:{confirm: "Czy na pewno?"} %>
        <% end %>
  </li>
  <% end %>
</ul>

<%= will_paginate %>

